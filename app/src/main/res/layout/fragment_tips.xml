<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.FragmentTips">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/t1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Mẹo xổ số"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                android:shadowRadius="5"
                android:shadowColor="#FFAB00" />

            <Button
                android:id="@+id/t2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/t1"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="40dp"
                android:text="Mẹo xổ số 1"
                android:textSize="20dp"
                android:background="@drawable/customborder2"
                app:backgroundTint="#FFAB00"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:shadowColor="#D50000"
                android:shadowRadius="5"/>

            <Button
                android:id="@+id/t3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/t2"
                android:text="Mẹo xổ số 2"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="50dp"
                android:textSize="20dp"
                android:background="@drawable/customborder2"
                app:backgroundTint="#FFAB00"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:shadowColor="#D50000"
                android:shadowRadius="5"/>

            <Button
                android:id="@+id/t4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/t3"
                android:text="Mẹo xổ số 3"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="50dp"
                android:textSize="20dp"
                android:background="@drawable/customborder2"
                app:backgroundTint="#FFAB00"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:shadowColor="#D50000"
                android:shadowRadius="5"/>

            <Button
                android:id="@+id/t5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/t4"
                android:text="Mẹo xổ số 4"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="50dp"
                android:textSize="20dp"
                android:background="@drawable/customborder2"
                app:backgroundTint="#FFAB00"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:shadowColor="#D50000"
                android:shadowRadius="5"/>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>