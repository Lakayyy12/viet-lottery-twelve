<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg12"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/im1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/customborder1"
        android:src="@drawable/ban12"
        android:scaleType="fitXY"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@id/im1"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/btn2"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="Chính sách bảo mật"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:shadowColor="#FF0000"
            android:shadowRadius="5"
            android:gravity="center"
            android:background="@drawable/tabbar01"
            android:contentDescription="@string/button"/>

        <TextView
            android:id="@+id/btn3"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="Chính sách bảo mật"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:shadowColor="#FF0000"
            android:shadowRadius="5"
            android:gravity="center"
            android:background="@drawable/tabbar01"
            android:contentDescription="@string/button"/>

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/l1"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:tabBackground="@drawable/tabbar1"
        android:backgroundTint="#FFAB00"
        app:tabTextColor="@color/white" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_layout"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp" />


</RelativeLayout>